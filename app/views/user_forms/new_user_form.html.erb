<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="top-header">
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4></h4>
      </div>
      <div class="col-sm-6 col-xs-6 col-md-6">
        <h4 class="text-center"></h4>
      </div>
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4><%= link_to "Done","#",class: "fit-right submit-user-form"%>
      </div>
    </div>
  </div>
</div>
<div class="col-md-10 col-md-offset-1 col-xs-12">
  <%= form_for @admin_form, :url =>create_user_form_user_forms_path(form_id: @admin_form), :method => "post",:html => { :class => " edit_admin_form user_template-form" } do |f| %>
    <div class="form-group">
      <%= f.label :form_name,"Form name",class: "control-label col-sm-2 col-xs-5 col-md-3" %>
    	<div class="col-sm-10 col-xs-7  col-md-9  ">
    	    <%= f.text_field :form_name, :class => 'form-control' %>
    	</div>
    </div>
    <div class="form-group">
      <%= f.label :form_name_slug,"Form Description",class: "control-label col-sm-2 col-xs-5 col-md-3" %>
      <div class="col-sm-10 col-xs-7  col-md-9  ">
        <%= f.text_field :form_name_slug, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-12">
      Select available fields <span> (Checkboxes for selecting fields for the form)</span>
      </label>
      <div class="col-sm-10 col-xs-12  col-md-12 no-padding  ">
        <ul class="user_form_fields">
          <%@admin_form.form_fields.each do |field|%>
            <% admin_field=AdminField.find(field)%>
            <li>
              <div class="col-md-5 col-xs-6">
                <%=admin_field.field_name%>
              </div>
              <%= check_box_tag 'admin_form[form_fields][]',admin_field.id,
                true%>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <label class="patient-add-btn case-edit-field"><%=link_to "Create a new field",new_field_user_forms_path,remote: true%> 
      </label>
    </div>
  <%end%>
</div>
<div id="user_case_field">
  
</div>