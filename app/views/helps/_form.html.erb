<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="top-header">
      <div class="col-sm-3 col-xs-3 col-md-3">
      </div>
      <div class="col-sm-6 col-xs-6 col-md-6">
        <h4 class="text-center"><%= params[:action] == "edit" ? 'Edit Help' : 'Help'%></h4>
      </div>
      <div class="col-sm-3 col-xs-3 col-md-3">
      </div>
    </div>
  </div>
</div>
<%= form_for(@help) do |f| %>
  <% if @help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@help.errors.count, "error") %> prohibited this speciality from being saved:</h2>

      <ul>
      <% @help.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <%= label_tag nil,"Add Help Video",class: "control-label col-sm-2 col-xs-4 col-md-2" %>
    <%= f.label :title,"Title",class: "control-label col-sm-2 col-xs-4 col-md-1" %>
      <div class="col-sm-10 col-xs-8  col-md-5  clear-box">
       <%= f.text_field :title, :class => 'help-text-form form-control' %>
      </div>
   </div><br><br>
   <div class="form-group">
        <%= label_tag nil,"",class: "control-label col-sm-2 col-xs-4 col-md-2" %>
        <%= f.label :url,"URL",class: "control-label col-sm-2 col-xs-4 col-md-1" %>
      <div class="col-sm-10 col-xs-8  col-md-5  clear-box">
        <%= f.text_field :url, :class => 'help-text-form form-control' %>
      </div>
    </div><br>
    <div class="action" style="text-align:center;margin-right:320px;">
    <%= f.submit "Update",class: "btn help-submit"%>
    </div>
 <%end%>
