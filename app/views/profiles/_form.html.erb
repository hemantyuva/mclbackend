<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="top-header">
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4><%#= link_to "Cancel",schedules_path,class: "fit-left"%></h4>
      </div>
      <div class="col-sm-6 col-xs-6 col-md-6">
        <h4 class="text-center"><%= params[:action] == "edit" ? 'Update Profile' : 'Add Profile'%></h4>
      </div>
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4><%= link_to "Update","#",class: "fit-right profile-submit"%>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>
  <div class="form-horizontal">
      <div class="col-md-12">
        <%= form_for (@surgeon_profile),:html => { :class => "form-horizontal profile-form"}  do |profile|%>
          <div class="form-group">
            <%= profile.label :speciality_name,"SPECIALITY",class: "control-label col-sm-2 col-xs-4 col-md-3" %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
            <%= profile.select :speciality_name, Profile::SPECIALITY_TYPES,{prompt: "Select "}, {class: "form-control"} %>
            </div>
          </div>
          <div class="form-group">
            <%= profile.label :speciality_name,"SUB-SPECIALITY",class: "control-label col-sm-2 col-xs-4 col-md-3" %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
            <%= profile.select :sub_speciality_name, Profile::SUB_SPECIALITY_TYPES,{prompt: "Select "}, {class: "form-control"} %>
            </div>
          </div>
          <div class="form-group">
            <%= profile.label :medical_school,"MEDICAL SCHOOL",class: "control-label col-sm-2 col-xs-4 col-md-3" %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :medical_school, :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= profile.label :residency,"RESIDENCY/DIPLOMA",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :residency, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= profile.label :spe_training,"SPECIALITY-TRAINING",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :spe_training, :class => 'form-control'%>
            </div>
          </div>

          <div class="form-group">
            <%= profile.label :my_favourite,"MY FAVOURITE",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :my_favourite, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= profile.label :my_hobby,"MY HOBBY",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :my_hobby, :class => 'form-control' %>
            </div>
          </div>

           <div class="form-group">
            <%= profile.label :more_about,"MORE ABOUT ME",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.text_field :more_about, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= profile.label :cover_image,"Cover Photo",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.file_field :cover_image %>
            </div>
          </div>

          <div class="form-group">
            <%= profile.label :profile_image,"Profile Photo",:class => 'control-label col-sm-2 col-xs-4 col-md-3' %>
            <div class="col-sm-10 col-xs-8  col-md-9  clear-box">
              <%= profile.file_field :profile_image %>
            </div>
          </div>

          </div>
        <%end%>
      </div>
</div>


