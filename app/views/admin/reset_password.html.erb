<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="top-header">
      <div class="col-sm-3 col-xs-3 col-md-3">
      </div>
      <div class="col-sm-6 col-xs-6 col-md-6">
        <h4 class="text-center">Reset Password</h4>
      </div>
      <div class="col-sm-3 col-xs-3 col-md-3">
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>
  <div class="form-horizontal">
      <div class="col-md-8 col-md-offset-2 col-xs-12  ">
        <div class="reset-form">
      <%= form_for @user, :url =>password_update_admin_path, :method => "get" do |f| %>
        <div class="form-group">
           <%= f.label :password,"New Password",class: "control-label col-sm-2 col-xs-4 col-md-4" %>
          <div class="col-sm-10 col-xs-8  col-md-8  ">
            <%= f.password_field :password, :class => 'form-control' %>
          </div>
        </div>

        <div class="form-group">
           <%= f.label :password,"Reenter Password",class: "control-label col-sm-2 col-xs-4 col-md-4" %>
          <div class="col-sm-10 col-xs-8  col-md-8  ">
            <%= f.password_field :password_confirmation, :class => 'form-control' %>
          </div>
        </div>
        <div class="actions">
          <div style="text-align:center;"><%= f.submit "Change Password",class: "btn btn-success" %></div>
        </div>
      <%end%>
      </div>
    </div>
  </div>
