<div class="container">
  <div class="card card-container">
      <div class="login-div">
      <div class="logo-img"><%= image_tag "logo1.jpg"%></div>
        <div class="app-name">MyCaselog</div>
      </div>
      <div class="alert-message">
        <% if !resource.errors.blank?%>
          <div class="alert-alert"><%=resource.errors.full_messages.join("<br/>").html_safe %>
          </div>
        <% end %>
      </div>
      <div class="card-form-container form-signin">        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name) , :html => {:class => 'form-horizontal' })   do |f| %>

           <div class="field">
            <%= f.label :name , :class => 'control-label'%><br />
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
           <div class="field">
            <%= f.label :mobile , :class => 'control-label'%><br />
            <%= f.text_field :mobile, :class => 'form-control' %>  
          </div>

          <div class="field">
            <%= f.label :email , :class => 'control-label'%><br />
            <%= f.email_field :email, :class => 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password , :class => 'control-label'%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" , :class => 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation , :class => 'control-label'%><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control' %><br />
          </div>


          <div class="actions">
            <%= f.submit "Sign up",class: "btn btn-lg btn-success btn-block btn-signin"   %>
          </div>

        <% end %>
        <br/>
        <div class="forgot-password">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
        <div class="sign-in-link">
          <%= link_to "Sign in", new_user_session_path %>         
        </div>
        <br />
      </div>
  </div><!-- /card-container -->
</div><!-- /container -->

<script>
$("#phone").intlTelInput({
  defaultCountry: "auto",
  geoIpLookup: function(callback) {
    $.get('http://ipinfo.io', function() {}, "jsonp").always(function(resp) {
      var countryCode = (resp && resp.country) ? resp.country : "";
      callback(countryCode);
    });
  },
  utilsScript: "utils.js" // just for formatting/placeholders etc
});
</script>

