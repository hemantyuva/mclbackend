<div class="manage-master-nav-tabs">
    <ul>
      <li>
        <%= link_to "Speciality",specialities_path%>
      </li>
        <li><%= link_to "Surgery",surgeries_path,class: "manage-master-nav-tabs-active" %></li>
        <li><%= link_to "Diagnosis",diagnoses_path%></li>
    </ul>
</div>

<%= render 'form'%><br>
  <%= text_field_tag :surgery_search,nil,id: "surgery_name_search",placeholder: "Type speciality name to instant search",class: "add-schdle-txt form-control"%>
<div id="surgery_search_partial">
<div class="mange-master">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created</th>
        <th>Modified</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @surgeries.each do |surgery| %>
        <tr>  
          <td><%= surgery.name %></td>
          <td><%= spec_date_format(surgery.created_at)%></td>
          <td><%= spec_date_format(surgery.updated_at)%></td>
          <td><%= link_to 'Modify', edit_surgery_path(surgery) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <div style="text-align: center;"><%= will_paginate @surgeries %></div>
</div>





