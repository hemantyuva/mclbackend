<div class="col-md-10 col-md-offset-1 col-xs-12">
  <%= form_for @admin_form, :url =>create_form_admin_forms_path, :method => "post" do |f| %>
    
    <div class="form-group">
      <%= f.label :form_type,"Form Type",class: "control-label col-sm-2 col-xs-5 col-md-3" %>
      <div class="col-sm-10 col-xs-7  col-md-9  ">
        <%= f.select :form_type,[["Surgery","surgery"],["Followup","followup"]],{prompt: "Select "}, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :form_name,"Form Name",class: "control-label col-sm-2 col-xs-5 col-md-3" %>
    	<div class="col-sm-10 col-xs-7  col-md-9  ">
    	  <%= f.text_field :form_name, :class => 'form-control' %>
    	</div>
    </div>

    <div class="form-group">
       <%= f.label :form_name_slug,"Form Slug",class: "control-label col-sm-2 col-xs-5 col-md-3" %>
      <div class="col-sm-10 col-xs-7  col-md-9  ">
        <%= f.text_field :form_name_slug, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
    <label class="col-md-12">
      Select available fields <span>(Checkboxes for selecting fields for the form)</span>
      </label>
      <div class="col-sm-10 col-xs-12  col-md-12 no-padding  ">
        <ul>
          <%@admin_fields.each do |field|%>
            <li>
            <div class="col-md-5 col-xs-6">
            <%=field.field_name%></div>
            <%= check_box_tag 'admin_form[form_fields][]',field.id  %>
            </li>
          <%end%>
        </ul>
      </div>
    </div>

    <div class="actions">
      <div style="text-align:center;">
        <%= f.submit "Save",class: "btn btn-success" %>
        <%=link_to "Cancel",admin_forms_path,class: "btn btn-success" %>
      </div>
    </div>
  <%end%>
</div>