<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="top-header">
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4><%#= link_to "Cancel",schedules_path,class: "fit-left"%></h4>
      </div>
      <div class="col-sm-6 col-xs-6 col-md-6">
        <h4 class="text-center"><%= params[:action] == "edit" ? 'Edit Patient' : 'Add New Patient'%></h4>
      </div>
      <div class="col-sm-3 col-xs-3 col-md-3">
        <h4><%= link_to "Add","#",class: "fit-right patient-add submit-patient-form"%></h4>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
  <div class="form-horizontal">
    <div class="row">
      <div class="col-md-12">
        <%= form_for (@patient),:html => { :class => "form-horizontal patient patient-form" }  do |patient|%>
          <% if params[:prev_url].present?%>
            <%= patient.hidden_field :prev_url,value: params[:prev_url]%>
          <%end%>
          <div class="estential-fields">ESSENTIAL FIELDS *</div>
          <div class="form-group">
            <%= patient.label :firstname,"FIRSTNAME",class: "control-label col-sm-2 col-xs-4 col-md-2" %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.text_field :firstname, :class => 'form-control',id: "f_name" %>
            </div>
          </div>
          <div class="form-group">
            <%= patient.label :lastname,"LASTNAME",:class => 'control-label col-sm-2 col-xs-4 col-md-2' %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.text_field :lastname, :class => 'form-control',id: "l_name" %>
            </div>
          </div>

          <div class="form-group">
            <%= patient.label :dob,"DATE OF BIRTH",:class => 'control-label col-sm-2 col-xs-4 col-md-2' %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.text_field :dob, :class => 'form-control',id: "patient_datepicker",:required => true, value: (patient.object.dob.to_date_format if patient.object.dob.present?) %>
            </div>
          </div>

          <div class="form-group">
            <%= patient.label :gender,"GENDER",:class => 'control-label col-sm-2 col-xs-4 col-md-2' %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.select :gender, Patient::GENDER_TYPES,{prompt: "Select "}, {class: "form-control", :required => true} %>
            </div>
          
          </div>
          <div class="non-esential-fields">NON ESSENTIAL FIELDS</div>
          <div class="form-group">
            <%= patient.label :phone,"PHONE",:class => 'control-label col-sm-2 col-xs-4 col-md-2' %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.text_field :phone, :class => 'form-control',id: "phone_patient"%>
            </div>
          </div>

          <div class="form-group">
            <%= patient.label :email,"EMAIL",:class => 'control-label col-sm-2 col-xs-4 col-md-2' %>
            <div class="col-sm-10 col-xs-8  col-md-10  clear-box">
              <%= patient.text_field :email, :class => 'form-control',id: "email_patient" %>
            </div>
          </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>




<script type="text/javascript">
  var f_name = new LiveValidation('f_name');
   f_name.add( Validate.Presence );  
  var l_name = new LiveValidation('l_name');
   l_name.add( Validate.Presence ); 
</script>
