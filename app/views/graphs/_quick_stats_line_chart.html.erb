<div class="highcharts-series-color">

  <div class="advance-search-link">
    <%=link_to "Advance search", graph_advance_search_index_path %>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="top-header">
        <div class="col-sm-3 col-xs-3 col-md-3">
          <h4><span class="chart-icon"><i data-params="<%=params.to_param%>"class="quick-bar-chart-click fa fa-bar-chart on-line-chart"></i></span></h4>
        </div>
        <div class="col-sm-6 col-xs-6 col-md-6">
          <h4 class="text-center">Statistics</h4>
        </div>
        <div class="col-sm-3 col-xs-3 col-md-3">
          <h4><span class="chart-search-icon">
            <%= link_to "#", id: "search-graph" do %>
              <i class="fa fa-search"></i>
            <%end%>
          </span></h4>
        </div>
      </div>
    </div>
  </div><br>
  <%= render 'tags_search_box'%>
  <div class="chart-link">
    <span>
      <%= link_to "Plot Date Range",date_range_graphs_path%>
    </span>
    <span>
      <%= link_to "Plot Quick Stats",quick_stats_graphs_path%>
    </span>
  </div><br><br>

  <div class="clearfix"></div>
  <div class="form-horizontal">
    <div class="row">
      <div class="col-md-12">
        <div class="chart-dates">
          <%= form_tag quick_stats_bar_chart_graphs_path,remote:true,method: "get" do %>
              <div class='input-group date' id='datetimepicker-inline'>
                <%= hidden_field_tag "date",params[:date],class: ""%>
              </div>
              <%= submit_tag "PLOT",class: "plot-btn btn btn-success btn"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <br><br>
  <div class="main-tags">
    <div id="container" style="height: 300px"></div>
  </div>
</div>
<script type="text/javascript">
$(function () {
 $('#container').highcharts({
    title: {
        text: 'Case Report'
    },
    xAxis: {
      name: "Date",
      categories: <%= raw @surgery_cases.keys.to_json %>  
    },
    yAxis: {
        title: {
            text: 'No of Cases'
        },
        plotLines: [{
            value: 0,
            width: 1,
            color: '#808080'
        }]
    },
    plotOptions: {
    series: {
    cursor: 'pointer',
    point: {
    events: {
      click: function() {
        for (var i = 0; i < this.series.data.length; i++) {
          this.series.data[i].update({ color: '#e03347' }, true, false);
            }
          window.location.href = "/graphs/show_cases?date="+this.category
        }
      },
     }
    }
    },
    series: [{
        name: 'Cases Count',
        data: <%= raw @surgery_cases.values.to_json %>  
    }]
  });
});
$(function () {
    $('#datetimepicker-inline').datetimepicker({
        inline: true,
        sideBySide: true,
        format: 'MM-YYYY'
    });
});
</script>
